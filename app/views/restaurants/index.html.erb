<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
		<% if restaurant.reviews.any? %>
			<ul>
				<% restaurant.reviews.each do |review| %>
					<li>
						<%= review.thoughts %>, <%= review.rating %>/5
					</li>
				<% end %>
			</ul>
		<% else%>
			<p>Sorry bro, no reviews</p>
		<% end %>
		<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
		<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
		<%= link_to "Review #{restaurant.name}, Badboi", new_restaurant_review_path(restaurant) %>
	<% end %>
<% else %>
	<h1>No restaurants yet, buddy</h1>
<% end %>

<a href='/restaurants/new'>Add a restaurant, dude</a>